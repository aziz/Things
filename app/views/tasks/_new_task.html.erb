<li class="new-task">
<% form_for(task, :html => { :autocomplete => "off"} ) do |f| %>
  <%= f.error_messages %>
  <div class="title-box">
    <span class="checkbox"></span>
    <div class="title">
      <label for="task_title">New Todo</label>
      <%= f.text_field :title %>
    </div>          
  </div>
  <div class="tag-box">
    <span class="add-tag"></span>
    <span class="tag-icon"></span>
    <label for="task_tag_list">Tags</label>
    <%= f.text_field :tag_list %>
  </div>
  <div class="note-box">
    <span class="note-icon"></span>
    <label for="task_notes">Notes</label>
    <%= f.text_area :notes, :size => "80x2" %>
  </div>
  <div class="due-box">
    <span class="settings"></span>
    <span class="due-icon"></span>
    <div class="due-menu">
      <label for="task_due_date">Due Date</label>
      <%= f.text_field :due_date, :class => "due_date" %>
      <a href="#" class="clear-due-date"></a>
      <div class="due-opt-popup">
        <span class="due-opt-desc">Show in Today:</span>
        <div class="due-opt-popup-inner">
        <span class="opt1">
          <span class="due-opt">on date</span>  
          <span class="due-opt-popup-icon"></span>          
        </span>
        <span class="opt2">
          <label for="task_show_days_before_due" class="has_value">Days</label>
          <%= f.text_field :show_days_before_due, :class => "show_days_before_due" %>
          <span class="due-opt">days before</span>  
          <span class="due-opt-popup-icon"></span>          
        </span>
        </div>
      </div>  
    </div>
  </div>
  <div>
    <%= f.hidden_field :status_id %>
    <%= f.hidden_field :project_id %>
    <%= f.hidden_field :area_id %>
  </div>
<% end %>    
</li>  